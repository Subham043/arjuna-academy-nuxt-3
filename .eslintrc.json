{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "parser": "@typescript-eslint/parser"
  },
  "extends": [
    "eslint:recommended",
    "@nuxtjs/eslint-config-typescript"
  ],
  "plugins": [],
  "rules": {
    "indent": ["error", 2],
    "vue/no-v-text-v-html-on-component": [
      "error",
      { "allow": ["router-link", "nuxt-link"] }
    ],
    "vue/prop-name-casing": ["error", "snake_case"],
    "vue/no-v-html": "off"
  }
}
